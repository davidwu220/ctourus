extends _layout.pug

block content
  main.grid-container.site-content
    .swiper-container
        .swiper-wrapper
          each slide, i in tour_slides
            .swiper-slide
              a(href="#")
                img(src=`/images/${slide.image}`, alt="photos")
    .grid-x.grid-padding-x.small-up-1.medium-up-2.large-up-3
      each tour in highlight_tours
        .cell
          .card
            .card-image
              img(src=`/images/${tour.images[0]}`, alt="")
            .card-section
              h4= tour.name
              h4= tour.starting_price

doctype html
html(lang="zh-Hant" data-tour-list=tour_list ? tour_list : null)

  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= title
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,600,700,800")
    link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.4.6/css/swiper.min.css")
    link(rel="stylesheet" href="/styles/admin-style.css")
    
  body
    nav.navbar.navbar-expand-sm.navbar-dark.bg-dark.sticky-top
      a.navbar-brand(href="/admin") Admin
      button.navbar-toggler(type="button" data-toggle="collapse" data-target="#adminNav")
        span.navbar-toggler-icon
      #adminNav.collapse.navbar-collapse
        ul.navbar-nav.d-flex
          li.nav-item(class="active")
            a.nav-link(href="/admin") 線路列表
          li.nav-item
            a#new-tour.nav-link(href="javascript:;") 添加線路
          li.nav-item
            a.nav-link(href="/") 回到主頁
        ul.navbar-nav.ml-sm-auto.d-flex
          li.nav-item
            a.nav-link(href="/admin_logout") 登出

    block content
    
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js")
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.4.6/js/swiper.min.js")
    script(src="/scripts/admin-list-bundle.js")
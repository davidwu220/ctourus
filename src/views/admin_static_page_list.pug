extends _admin_layout.pug

block content
  main.p-4.container
    .row
      button#new-static-page.mdc-button.mdc-button--raised
        i.material-icons add
        span.mdc-button__label 添加靜態頁面
    .row.mt-3
      table.main-list-table.table.table-bordered.table-hover.table-responsive-md
        thead
          tr.main-list-title
            th(scope="col")
              .d-flex.justify-content-between 順序
                if sortBy == "order"
                  i.fas.fa-caret-down
            th(scope="col")
              a(href="?sortBy=customer_id").d-flex.justify-content-between 標題
                if sortBy == "customer_id"
                  i.fas.fa-caret-down
            th(scope="col")
              a(href="?sortBy=customer_name").d-flex.justify-content-between Permalink
                if sortBy == "customer_name"
                  i.fas.fa-caret-down
            th(scope="col")
              .d-flex.justify-content-between 編輯
            th(scope="col")
              .d-flex.justify-content-between 刪除
        tbody
          each row in data
            tr
              td= row.order+1
              td= row.name
              td
                a(href=`/static-pages/${row.permalink}`)= `/${row.permalink}`
              td(style="text-align: center;")
                button.edit-btn.mdc-button.mdc-button--dense.no-min-width(onclick=`window.location.href='/admin/static-pages/${row.permalink}/edit';`)
                  i.material-icons edit
              td(style="text-align: center;")
                button.delete-btn.mdc-button.mdc-button--dense.no-min-width(data-tour=(JSON.stringify(row)) data-menu=(JSON.stringify(menu)))
                  i.material-icons delete_forever  
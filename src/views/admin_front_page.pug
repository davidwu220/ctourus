extends _admin_layout.pug

block content
  main.p-4.container
    // New/edit slider 
    #slider-modal.mdc-dialog(role='alertdialog' aria-modal='true' aria-labelledby='my-dialog-title')
      form#slider-modal-form.mdc-dialog__container(method='POST' action='')
        .mdc-dialog__surface
          // Title cannot contain leading whitespace due to mdc-typography-baseline-top() 
          h2.mdc-dialog__title#slider-modal-title
          // will set action by data-* attribute
          .mdc-dialog__content#slider-modal-content
            .required-asterisk.note * Required
            //- TODO: may need to handle ordering better
            .form-group
              label.col-form-label(for="slider-modal-order") 順序:
              | 
              span.required-asterisk *
              input#slider-modal-order.form-control(type='text' name='order' required)
            .form-group
              label.col-form-label(for="slider-modal-title") 標題:
              | 
              span.required-asterisk *
              input#slider-modal-title.form-control(type='text' name='name' required)
            .form-group
              label.col-form-label(for="slider-modal-permalink") Permalink:
              | 
              span.required-asterisk *
              .input-group
                .input-group-prepend
                  span.input-group-text /tours/
                input#slider-modal-permalink.form-control(type='text' name='permalink' pattern="[a-zA-Z0-9-_]+" required)
              small.form-text.text-muted 只可包含英文字母大小寫、數字、連結號 (-)、及下劃線 (_)
          footer.mdc-dialog__actions
            button.mdc-button.mdc-dialog__button(type='button', data-mdc-dialog-action='close')
              span.mdc-button__label Cancel
            //- TODO: will need to hold the modal if the information is not correct
            button.mdc-button.mdc-dialog__button(type='submit')
              span.mdc-button__label OK
      .mdc-dialog__scrim
    
